@model ComputerServicesWeb.Models.HomeViewModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container card-section">
</section>

<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="deal">
                    <h2 class="deal-title">
                        BEST DEALS
                        IN THE MARKET
                    </h2>

                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

            </div>
        </div>
        </div>
</section>

<div class="product-section">
    <section class="container">
        <div class="title">PRODUCTS</div>
        <div class="row">



            @if (Model.usedMachines.Count() > 0)
            {
                foreach (var item in Model.usedMachines)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <div class="product-banner c-cap">
                            <img src="@item.PicturePath" alt="">
                        </div>
                        <div class="product-title">
                            <div class="title-description">
                                <h5>@item.Brand</h5>
                                <p>Description</p>
                                <ul id="" class="highlights text-left hidden-xs">
                                    <li>@item.Ram</li>
                                    <li>@item.ScreenSize</li>
                                    <li>@item.Type</li>
                                    <li>@item.Processor</li>
                                    <li>@item.ModelNo</li>
                                    <li>@item.OtherInformation</li>
                                </ul>
                            </div>
                            <div class="price-card mt-3">
                                <span class="cart">
                                    <a href="">View Details</a>
                                </span>
                            </div>
                        </div>
                   </div>
                }
            }
        </div>
    </section>
</div>
