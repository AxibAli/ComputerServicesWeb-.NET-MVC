<section class="container card-section">
</section>


<div class="product-section">
    <section class="container">
        <div class="title"><span>OUR</span> Services</div>
        <div class="row">
            @if (Model.services.Count() > 0)
            {
                foreach (var item in Model.services)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <div class="product-banner">
                            <img src="@item.PicturePath" alt="">
                        </div>
                        <div class="product-title">
                            <div class="title">
                                <h3>@item.Name</h3>
                            </div>
                            <div class="title-description">
                                <p>@item.Description</p>
                            </div>
                            <div class="price-card mt-3">
                                <span class="cart">
                                    <a href="">Contact us</a>
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
</div>


<div class="product-section">
    <section class="container">
        <div class="title">PRODUCTS</div>
        <div class="row">
            @if (Model.usedMachines.Count() > 0)
            {
                foreach (var item in Model.usedMachines)
                {
                    if (item.PicturePath.Contains(","))
                    {
                        var allpic = item.PicturePath.Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);

                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                            <div class="product-banner c-cap">
                                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                                    <div class="carousel-inner">
                                        @{int i = 0;}
                                        @for (int j = 0; j < allpic.Length; j++)
                                        {
                                            i++;
                                            var active = i == 1 ? "active" : "";
                                            <div class="product-banner c-cap carousel-item @active">
                                                <img src="@allpic[j]" alt="">
                                            </div>
                                        }
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="product-title">
                                <div class="title-description">
                                    <h5>@item.Brand</h5>
                                    <p>@item.OtherInformation</p>
                                    <ul id="" class="highlights text-left hidden-xs">
                                        <li><b>Ram </b>@item.Ram</li>
                                        <li><b>Hard Disk </b>@item.Harddisk</li>
                                        <li><b>Screen Size </b>@item.ScreenSize</li>
                                        <li><b>Type </b>@item.Type</li>
                                        <li><b>Processor </b>@item.Processor</li>
                                        <li><b>Model No </b>@item.ModelNo</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                            <div class="product-banner c-cap">
                                <img src="@item.PicturePath" alt="">
                            </div>
                            <div class="product-title">
                                <div class="title-description">
                                    <h5>@item.Brand</h5>
                                    <p>@item.OtherInformation</p>
                                    <ul id="" class="highlights text-left hidden-xs">
                                        <li><b>Ram </b>@item.Ram</li>
                                        <li><b>Hard Disk </b>@item.Harddisk</li>
                                        <li><b>Screen Size </b>@item.ScreenSize</li>
                                        <li><b>Type </b>@item.Type</li>
                                        <li><b>Processor </b>@item.Processor</li>
                                        <li><b>Model No </b>@item.ModelNo</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    }
                }
            }
        </div>
    </section>
</div>

