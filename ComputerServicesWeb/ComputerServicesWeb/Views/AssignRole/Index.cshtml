
@{
    ViewBag.Title = "Index";
}

<h2>Assign Role</h2>

@using (Html.BeginForm("Assign", "AssignRole", FormMethod.Post))
{
    <div class="form-group">
        <label for="RolesList">Role</label>
        @Html.DropDownList("RolesList", (IEnumerable<SelectListItem>)ViewBag.RolesList)
    </div>

    <div class="form-group">
        <label for="UsersList">User</label>
        @Html.DropDownList("UsersList", (IEnumerable<SelectListItem>)ViewBag.UsersList)
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>

}