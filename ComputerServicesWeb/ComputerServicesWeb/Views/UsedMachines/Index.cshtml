@model ComputerServicesWeb.Models.UsedMachineModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Default</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="../../demo1/dist/index.html" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Dashboards</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->

    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div>


            @using (Html.BeginForm("MachineInformation", "UsedMachines", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="mb-3">
                    <label for="BrandName" class="form-label">Brand name:</label>
                    @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", id = "BrandName" })
                </div>
                <div class="mb-3">
                    <label for="SelectPicture" class="form-label">Upload Picture:</label>
                    @Html.TextBox("file", "", new { type = "file", @class = "form-control", id = "SelectPicture" })
                </div>
                <div class="mb-3">
                    <label for="Type" class="form-label">Type:</label>
                    @Html.DropDownListFor(m => m.Type, new List<SelectListItem> { new SelectListItem { Text = "Desktop all in one", Value = "1" }, new SelectListItem { Text = "Desktop case", Value = "2" }, new SelectListItem { Text = "Monitor", Value = "3" }, new SelectListItem { Text = "Laptop", Value = "3" } }, "Please select", new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label for="Ram" class="form-label">Ram:</label>
                    @Html.TextBoxFor(m => m.Ram, new { @class = "form-control", id = "Ram" })
                </div>
                <div class="mb-3">
                    <label for="Harddisk" class="form-label">Hard disk:</label>
                    @Html.TextBoxFor(m => m.Harddisk, new { @class = "form-control", id = "Harddisk" })
                </div>
                <div class="mb-3">
                    <label for="ScreenSize" class="form-label">Screen size:</label>
                    @Html.TextBoxFor(m => m.ScreenSize, new { @class = "form-control", id = "ScreenSize" })
                </div>
                <div class="mb-3">
                    <label for="ModelNo" class="form-label">Model no:</label>
                    @Html.TextBoxFor(m => m.ModelNo, new { @class = "form-control", id = "ModelNo" })
                </div>
                <div class="mb-3">
                    <label for="Processor" class="form-label">Processor:</label>
                    @Html.TextBoxFor(m => m.Processor, new { @class = "form-control", id = "Processor" })
                </div>
                <div class="mb-3">
                    <label for="OtherInfo" class="form-label">Other Information:</label>
                    @Html.TextAreaFor(m => m.OtherInformation, new { @class = "form-control", id = "OtherInfo", maxlength = "50" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }

        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->