@model ComputerServicesWeb.Models.UsedMachineModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Default</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="../../demo1/dist/index.html" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Dashboards</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->

    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div>


            @using (Html.BeginForm("MachineInformation", "UsedMachines", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <label for="usedMachineId" class="form-label">Post ID:/:بعد معرف</label>
                    @Html.TextBoxFor(m => m.usedmachineId, new { @class = "form-control", id = "usedMachineId" })
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="BrandName" class="form-label">Brand Name:</label>
                        @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", id = "BrandName" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicBrandName" class="form-label"><b>:اسم العلامة التجارية</b></label>
                        @Html.TextBoxFor(m => m.ArabicBrand, new { @class = "form-control", id = "ArabicBrandName", dir = "rtl" })
                    </div>
                </div>

                <div class="mb-3">
                    <label for="SelectPicture" class="form-label">Upload Picture:/:تحميل الصورة</label>
                    @Html.TextBox("file", "", new { type = "file", @class = "form-control", id = "SelectPicture", multiple = "multiple" })
                </div>

                <div class="row fv-row">
                    <div class="col-6">
                        <label  class="form-label">Type:</label>
                        @Html.DropDownList("ListofType", Model.Types, "Please Select Any Type", new { @class = "form-control" })
                    </div>
                    <div class="col-6">
                        <label  class="form-label"><b>:يكتب</b></label>
                        @Html.DropDownList("ListofType", Model.Types, "الرجاء تحديد أي نوع", new { @class = "form-control", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="Ram" class="form-label">Ram:</label>
                        @Html.TextBoxFor(m => m.Ram, new { @class = "form-control", id = "Ram" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicRam" class="form-label"><b>:كبش</b></label>
                        @Html.TextBoxFor(m => m.ArabicRam, new { @class = "form-control", id = "ArabicRam", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="Harddisk" class="form-label">Hard Disk:</label>
                        @Html.TextBoxFor(m => m.Harddisk, new { @class = "form-control", id = "Harddisk" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicHarddisk" class="form-label"><b>:القرص الصلب</b></label>
                        @Html.TextBoxFor(m => m.ArabicHarddisk, new { @class = "form-control", id = "ArabicHarddisk", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="ScreenSize" class="form-label">Screen Size:</label>
                        @Html.TextBoxFor(m => m.ScreenSize, new { @class = "form-control", id = "ScreenSize" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicScreenSize" class="form-label"><b>:حجم الشاشة</b></label>
                        @Html.TextBoxFor(m => m.ArabicScreenSize, new { @class = "form-control", id = "ArabicScreenSize", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="ModelNo" class="form-label">Model No:</label>
                        @Html.TextBoxFor(m => m.ModelNo, new { @class = "form-control", id = "ModelNo" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicModelNo" class="form-label"><b>:نموذج رقم</b></label>
                        @Html.TextBoxFor(m => m.ArabicModelNo, new { @class = "form-control", id = "ArabicModelNo", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="Processor" class="form-label">Processor:</label>
                        @Html.TextBoxFor(m => m.Processor, new { @class = "form-control", id = "Processor" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicProcessor" class="form-label"><b>:المعالج</b></label>
                        @Html.TextBoxFor(m => m.ArabicProcessor, new { @class = "form-control", id = "ArabicProcessor", dir = "rtl" })
                    </div>
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="OtherInfo" class="form-label">Other Information:</label>
                        @Html.TextAreaFor(m => m.OtherInformation, new { @class = "form-control", id = "OtherInfo", maxlength = "50" })
                    </div>
                    <div class="col-6">
                        <label for="ArabicOtherInformation" class="form-label"><b>:معلومات أخرى</b></label>
                        @Html.TextAreaFor(m => m.ArabicOtherInformation, new { @class = "form-control", id = "ArabicOtherInformation", maxlength = "50", dir = "rtl" })
                    </div>
                </div>
                <div class="text-center pt-15">
                    <button type="submit" class="btn btn-primary">Submit/<b>يُقدِّم</b></button>
                </div>
            }

        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->
