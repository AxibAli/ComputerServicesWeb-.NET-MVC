    </div>
    <!--end::Toolbar container-->
</div>



<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="product-section" style="background-color: white;">
            <section class="container">
                <div class="row">
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                                        <div class="card">
                                            <div class="inner-card">
                                                <div class="img-wrapper">
                                                    <img src="@item.PicturePath" alt="">
                                                </div>
                                                <div class="content">
                                                    <h1 class="card-heading">@item.Brand</h1>
                                                    <p><b>Description</b></p>
                                                    <ul id="" class="highlights text-left hidden-xs">
                                                        <li><b>Ram </b>@item.Ram</li>
                                                        <li><b>Hard Disk </b>@item.Harddisk</li>
                                                        <li><b>Screen Size </b>@item.ScreenSize</li>
                                                        <li><b>Type </b>@item.Type</li>
                                                        <li><b>Processor </b>@item.Processor</li>
                                                        <li><b>Model No </b>@item.ModelNo</li>
                                                    </ul>
                                                    <p data-max-characters="50">
                                                        @item.OtherInformation
                                                    </p>
                                                </div>
                                                <div class="btn-wrapper">
                                                    <button class="view-btn" data-src="@item.PicturePath">View</button>
                                                </div>
                                            </div>
                                        </div>

                        }
                    }
                    else
                    {
                        <h4>No Record Found!</h4>
                    }
                </div>
           </section>
        </div>


        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>

@Html.PagedListPager(Model, pageNumber => Url.Action("GetAllUsedMachines", new
{
 pageNumber
 }))


@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")

<script>
    $("p").each(function (index, currentText) {
        var length = $(this).attr("data-max-characters");
        var texts = $(this).text().split(" ", length).join(" ");
        $(this).text(texts);
    });

</script>
@Scripts.Render("~/Content/assets/js/pagination.js")

