@model ComputerServicesWeb.Models.ServicesModel

@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Services</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a href="" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Dashboards</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->

    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div>


            @using (Html.BeginForm("Services", "UsedMachines", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="ServiceName" class="form-label">Service Name:</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "ServiceName" })
                    </div>
                    <div class="col-6">
                        <label for="ServiceName" class="form-label">:اسم الخدمة</label>
                        @Html.TextBoxFor(m => m.ArabicName, new { @class = "form-control", id = "ArabicServiceName", dir = "rtl" })
                    </div>
                </div>
                <div class="mb-3">
                    <label for="SelectPicture" class="form-label">Upload Picture:</label>
                    @Html.TextBox("file", "", new { type = "file", @class = "form-control", id = "SelectPicture" })
                </div>
                <div class="row fv-row">
                    <div class="col-6">
                        <label for="Description" class="form-label">Services Description:</label>
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", id = "Description" })
                    </div>
                    <div class="col-6">
                        <label for="Description" class="form-label">:وصف الخدمات</label>
                        @Html.TextBoxFor(m => m.ArabicDescription, new { @class = "form-control", id = "ArabicDescription", dir = "rtl" })
                    </div>
                </div>
                <div class="text-center pt-15">
                    <button type="submit" class="btn btn-primary">Submit/يُقدِّم</button>
                </div>
            }

        </div>
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->
